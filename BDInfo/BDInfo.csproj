<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>BDInfo</RootNamespace>
    <AssemblyName>BDInfo</AssemblyName>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <Version>0.8.0.0</Version>
    <Authors>Cinema Squid, zoffline, contributors</Authors>
    <Description>BDInfo CLI - Blu-ray Video and Audio Analysis Tool</Description>
    <Copyright>Copyright Â© 2010 Cinema Squid</Copyright>

    <!-- Enable single-file publishing for easy distribution -->
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>
  </PropertyGroup>

  <ItemGroup>
    <!-- DiscUtils for ISO/UDF disc image support -->
    <PackageReference Include="DiscUtils.Udf" Version="0.16.13" />
    <PackageReference Include="DiscUtils.Iso9660" Version="0.16.13" />
  </ItemGroup>

</Project>
